
# Gemini API
SALTY_GEMINI_API_KEY=your_gemini_api_key_here
SALTY_GEMINI_MODEL=gemini-pro
SALTY_GEMINI_TEMPERATURE=0.7
SALTY_GEMINI_MAX_TOKENS=1000

# RAG Server
RAG_SERVER_PATH=mcp_servers/rag_server.py
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMA_DISABLE_TELEMETRY=true

# Roku
ROKU_HOST=your_roku_ip_address
ROKU_MCP_URL=http://localhost:8060

# Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8501/callback
SPOTIFY_SCOPE=user-read-playback-state user-modify-playback-state playlist-read-private playlist-read-collaborative
SPOTIFY_SPEAKER=Tiki Lounge
SPOTIFY_VOLUME=50
SPOTIFY_TIKI_PLAYLIST_ID=your_playlist_id
SPOTIFY_CLOSING_SONG_ID=your_song_id

# Voice Server
VOICE_SERVER_URL=http://localhost:9006
TTS_METHOD=elevenlabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id
